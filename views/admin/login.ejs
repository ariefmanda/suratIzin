<!DOCTYPE html>
<html>
<head>
  <% include ../partials/metahead %>
</head>

<body class="hold-transition login-page">
	<div class="login-box">
	  <div class="login-logo">
	    <a href="/admin">SuratIzin<b>[dot]</b>Com</a>
	  </div>

	  <div class="login-box-body">
	    <p class="login-box-msg">Sign in to start your session</p>
      <% if (message_login) { %>
          <div id="flash_login">
            <div class="alert fade in alert-danger">
              <i class="icon-remove close" data-dismiss="alert"></i>
              <%= message_login %>
            </div>
          </div>
          <!-- <script>
            $(function() {
              $('#flash_login').delay(3000).fadeOut(1000);
            });
          </script> -->
        <% } %>
	    <form action="/admin/login/verification" method="post">
	      <div class="form-group has-feedback">
	        <input value="superadmin@suratizin.com" name="email" type="email" class="form-control" placeholder="Email">
	        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
	      </div>
	      <div class="form-group has-feedback">
	        <input value="password" type="password" name="password" class="form-control" placeholder="Password">
	        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
	      </div>
	      <div class="row">
	        <div class="col-xs-8"></div>
	        <div class="col-xs-4">
	          <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
	        </div>
	      </div>
	    </form>

	    <a href="">I forgot my password</a><br>
	  </div>
	</div>

	<% include ../partials/metafooter %>
</body>
</html>
